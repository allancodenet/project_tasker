<%= turbo_frame_tag :modal do %>
  <div class="relative">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75"> </div>
    <div class=" fixed  inset-0 bg-gray-800 mt-8 p-8  size-96  mx-auto overflow-y-auto">
      <% if @projects.present? %>
        <%@projects.each do |project| %>
          <div class="p-2">
            <ul>
              <li class= "text-gray-300 border-b border-gray-400">
                <%= link_to project.name, project_path(project), data:{turbo_frame: "_top"} %>
              </li>
            </ul>
          </div>
        <% end %>
      <% else %>
        <div class="p-2">
          <ul>
            <li class= "text-gray-300 border-b border-gray-400">
              No results
            </li>
          </ul>
        </div>
      <% end %>
      <div class="absolute right-0 bottom-0 ">
        <%= link_to 'javascript:history.back()' do %>
          <%= inline_svg_tag("close.svg", class: "text-gray-500 hover:text-gray-200") %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
