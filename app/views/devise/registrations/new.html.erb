<div class="h-screen bg-gray-200 flex items-center justify-center ">
  <div class="md:max-w-md w-full bg-gray-100 shadow-lg p-8 rounded-lg">
    <h2 class="font-bold mb-6 text-gray-800 text-center text-2xl">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data:{turbo: false}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <% resource.build_owned_organization if resource.owned_organization.nil?  %>
      <%= f.fields_for :owned_organization  do |org|%>
        <div class="mb-4 ">
          <%= org.label :organization_subdomain, class: "block mb-2 text-gray-700" %>
          <%= org.text_field :subdomain, autofocus: true, class: "w-full px-3 py-2 border  rounded-lg" %>
        </div>
        <div class="mb-4 ">
          <%= org.label :organization_name, class: "block mb-2 text-gray-700" %>
          <%= org.text_field :name, autofocus: true, class: "w-full px-3 py-2 border  rounded-lg" %>
        </div>
      <% end %>
      <div class="mb-4 ">
        <%= f.label :your_full_name, class: "block mb-2 text-gray-700" %>
        <%= f.text_field :full_name, autofocus: true, class: "w-full px-3 py-2 border  rounded-lg" %>
      </div>
      <div class="mb-4 ">
        <%= f.label :email, class: "block mb-2 text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "w-full px-3 py-2 border  rounded-lg" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block mb-2 text-gray-700" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class: "w-full px-3 py-2 border  rounded-lg" %>
      </div>
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block mb-2 text-gray-700"%>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "w-full px-3 py-2 border  rounded-lg" %>
      </div>
      <div class="flex justify-center mb-6">
        <%= f.submit "Sign up", class:"cursor-pointer  w-full bg-orange-600 py-3 px-4  text-white font-semibold  rounded-lg shadow-md hover:bg-orange-700" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
